---
import type { Program } from '../data/programs';

interface Props {
  year: number;
  programs: Program[];
}

const { year, programs } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class="timeline-year">
  <div class="timeline-marker">
    <span class="timeline-year-label">{year}</span>
    <div class="timeline-dot"></div>
  </div>

  <div class="timeline-programs">
    {programs.map(program => (
      <a href={`${base}/program/${program.id}`} class="timeline-card card-glow">
        <div class="timeline-card-header">
          <h3 class="timeline-card-title">{program.title}</h3>
          <div class="timeline-card-badges">
            <span class="badge badge-lang">{program.language}</span>
            <span class="badge badge-category">{program.category}</span>
          </div>
        </div>
        <p class="timeline-card-desc">{program.subtitle}</p>
      </a>
    ))}
  </div>
</div>

<style>
  .timeline-year {
    position: relative;
    padding-left: 4rem;
    padding-bottom: 3rem;
  }

  .timeline-year::before {
    content: '';
    position: absolute;
    left: 1.35rem;
    top: 0;
    bottom: 0;
    width: 1px;
    background: var(--color-border-bright);
  }

  .timeline-year:last-child::before {
    bottom: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 2.75rem;
  }

  .timeline-year-label {
    font-family: var(--font-display);
    font-size: 1.6rem;
    color: var(--color-amber);
    text-shadow: var(--glow-amber);
    letter-spacing: 0.05em;
    margin-bottom: 0.35rem;
  }

  .timeline-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-amber);
    box-shadow: 0 0 6px var(--color-amber), 0 0 12px rgba(255, 176, 0, 0.3);
    position: relative;
    z-index: 1;
  }

  .timeline-programs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .timeline-card {
    display: block;
    background: var(--color-card);
    padding: 1rem 1.25rem;
    text-decoration: none;
    transition: transform 0.2s var(--ease-out), border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .timeline-card:hover {
    transform: translateX(4px);
  }

  .timeline-card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.75rem;
    margin-bottom: 0.35rem;
    flex-wrap: wrap;
  }

  .timeline-card-title {
    font-size: 1.2rem;
    margin: 0;
  }

  .timeline-card-badges {
    display: flex;
    gap: 0.35rem;
    flex-shrink: 0;
  }

  .timeline-card-desc {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 640px) {
    .timeline-year {
      padding-left: 3rem;
    }
    .timeline-marker {
      width: 2rem;
    }
    .timeline-year-label {
      font-size: 1.3rem;
    }
    .timeline-year::before {
      left: 1rem;
    }
  }
</style>
