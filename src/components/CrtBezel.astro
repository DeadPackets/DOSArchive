---
interface Props {
  label?: string;
}

const { label = 'DOSBox' } = Astro.props;
---

<div class="crt-bezel">
  <div class="crt-bezel__screen crt-flicker">
    <slot />
  </div>
  <span class="crt-bezel__label" aria-hidden="true">{label}</span>
  <span class="crt-bezel__led" aria-hidden="true">Power</span>
</div>
