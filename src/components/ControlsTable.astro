---
import type { ProgramControl } from '../data/programs';

interface Props {
  controls: ProgramControl[];
}

const { controls } = Astro.props;
---

{controls.length > 0 && (
  <div class="controls-table-wrap">
    <table class="controls-table">
      <thead>
        <tr>
          <th scope="col">Key</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {controls.map(ctrl => (
          <tr>
            <td class="controls-key">
              <kbd>{ctrl.key}</kbd>
            </td>
            <td>{ctrl.action}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
)}

<style>
  .controls-table-wrap {
    overflow-x: auto;
  }

  .controls-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.85rem;
  }

  .controls-table th {
    font-family: var(--font-display);
    font-size: 1.05rem;
    color: var(--color-phosphor);
    text-align: left;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--color-phosphor-dim);
    letter-spacing: 0.05em;
  }

  .controls-table td {
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .controls-table tr:last-child td {
    border-bottom: none;
  }

  .controls-key kbd {
    font-family: var(--font-display);
    font-size: 1rem;
    color: var(--color-amber);
    background: var(--color-surface);
    border: 1px solid var(--color-border-bright);
    padding: 0.1rem 0.5rem;
    display: inline-block;
  }
</style>
