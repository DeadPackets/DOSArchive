---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DosPlayer from '../../components/DosPlayer.astro';
import ControlsTable from '../../components/ControlsTable.astro';
import { programs } from '../../data/programs';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  return programs.map((program, index) => ({
    params: { id: program.id },
    props: {
      program,
      prev: index > 0 ? programs[index - 1] : null,
      next: index < programs.length - 1 ? programs[index + 1] : null,
    },
  }));
};

const { program, prev, next } = Astro.props;
const base = import.meta.env.BASE_URL;
const bundleUrl = `${base}/bundles/${program.id}.jsdos`;
---

<BaseLayout
  title={`${program.title} - DOSArchive`}
  description={program.description}
  image={`/DOSArchive/images/${program.image}`}
  hasEmulator={true}
>
  <div class="container">
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <a href={base}>Archive</a>
      <span aria-hidden="true">/</span>
      <span aria-current="page">{program.title}</span>
    </nav>

    <article class="program-detail">
      <!-- Header -->
      <header class="detail-header">
        <div class="detail-badges">
          <span class="badge badge-year">{program.year}</span>
          <span class="badge badge-lang">{program.language}</span>
          <span class="badge badge-category">{program.category}</span>
        </div>
        <h1 class="detail-title">{program.title}</h1>
        <p class="detail-subtitle">{program.subtitle}</p>
      </header>

      <!-- Emulator -->
      <section class="detail-emulator" aria-label="DOS Emulator">
        <DosPlayer bundleUrl={bundleUrl} programId={program.id} />
      </section>

      <!-- Controls -->
      {program.controls.length > 0 && (
        <section class="detail-section">
          <h2>Controls</h2>
          <ControlsTable controls={program.controls} />
        </section>
      )}

      <!-- Launch Notes -->
      {program.launchNotes && (
        <section class="detail-section">
          <h2>Notes</h2>
          <p class="detail-notes">{program.launchNotes}</p>
        </section>
      )}

      <!-- Story -->
      <section class="detail-section">
        <h2>The Story</h2>
        <p class="detail-story">{program.story}</p>
      </section>

      <!-- Tags -->
      <section class="detail-section">
        <h2>Tags</h2>
        <div class="detail-tags">
          {program.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </section>

      <!-- Navigation -->
      <nav class="detail-nav" aria-label="Program navigation">
        {prev ? (
          <a href={`${base}/program/${prev.id}`} class="detail-nav-link detail-nav-prev">
            <span class="detail-nav-dir">&lt; prev</span>
            <span class="detail-nav-name">{prev.title}</span>
          </a>
        ) : <div />}
        {next ? (
          <a href={`${base}/program/${next.id}`} class="detail-nav-link detail-nav-next">
            <span class="detail-nav-dir">next &gt;</span>
            <span class="detail-nav-name">{next.title}</span>
          </a>
        ) : <div />}
      </nav>
    </article>
  </div>
</BaseLayout>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    letter-spacing: 0.04em;
  }

  .breadcrumb a {
    color: var(--color-text-muted);
  }

  .breadcrumb a:hover {
    color: var(--color-phosphor);
  }

  .breadcrumb span[aria-current] {
    color: var(--color-text);
  }

  /* ── Header ──── */
  .detail-header {
    margin-bottom: 2rem;
  }

  .detail-badges {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .detail-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 0.25rem;
  }

  .detail-subtitle {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  /* ── Emulator ──── */
  .detail-emulator {
    margin-bottom: 2.5rem;
  }

  /* ── Sections ──── */
  .detail-section {
    margin-bottom: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .detail-section h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .detail-story {
    font-size: 0.9rem;
    color: var(--color-text);
    line-height: 1.75;
    max-width: 720px;
  }

  .detail-notes {
    font-size: 0.85rem;
    color: var(--color-amber);
    background: rgba(255, 176, 0, 0.04);
    border: 1px solid var(--color-amber-dim);
    padding: 0.75rem 1rem;
  }

  /* ── Tags ──── */
  .detail-tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .tag {
    font-family: var(--font-display);
    font-size: 0.95rem;
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
    padding: 0.1rem 0.5rem;
    letter-spacing: 0.03em;
  }

  /* ── Navigation ──── */
  .detail-nav {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .detail-nav-link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    padding: 0.5rem 0;
    transition: color 0.2s ease;
  }

  .detail-nav-link:hover .detail-nav-name {
    color: var(--color-phosphor);
    text-shadow: var(--glow-sm);
  }

  .detail-nav-dir {
    font-family: var(--font-display);
    font-size: 0.95rem;
    color: var(--color-text-muted);
    letter-spacing: 0.08em;
  }

  .detail-nav-name {
    font-family: var(--font-display);
    font-size: 1.15rem;
    color: var(--color-text);
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .detail-nav-next {
    text-align: right;
    margin-left: auto;
  }
</style>
